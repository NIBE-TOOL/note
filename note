                  <option value="">‚Äî S√©lectionner ‚Äî</option>
                  <option value="BAR-TH172">Sol/Eau & Eau/Eau ‚Äì Fiche BAR-TH172</option>
                  <option value="BAR-TH171">Air/Eau ‚Äì Fiche BAR-TH171</option>
                </Select>
              </div>
            </div>
            <div className="mt-6 flex justify-end">
              <Button disabled={!fiche} onClick={()=>setStep(1)}>Continuer <ChevronRight className="inline w-4 h-4 ml-1"/></Button>
            </div>
          </Card>
        )}

        {step===1 && (
          <Card>
            <h2 className="text-lg font-semibold mb-4">2) Coordonn√©es</h2>
            <div className="grid md:grid-cols-2 gap-6">
              <div>
                <h3 className="font-medium mb-2">Installateur üîß</h3>
                <div className="grid gap-3">
