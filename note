// --- UI helpers (minimal, shadcn-like shells so file runs standalone) ---
const Card: React.FC<React.HTMLAttributes<HTMLDivElement>> = ({ className = "", ...props }) => (
  <div className={`bg-white rounded-2xl shadow p-6 ${className}`} {...props} />
);
